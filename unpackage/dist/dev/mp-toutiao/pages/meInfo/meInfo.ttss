/* 页面铺满屏幕 */
.page-fill {
	width:100%;
	height: 100%;
	position: absolute;
}
/* 整个页面内边距 */
.info-list {
	/* margin-top: 20upx; */
	padding: 0rpx 30rpx;
}
/* 头像、昵称、生日、性别：外壳 */
.item-wapper {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	/* margin-top: 20upx; */
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
	-webkit-box-pack: start;
	-webkit-justify-content: flex-start;
	        justify-content: flex-start;
}
/* 头像外壳：单独属性 */
.face-line-upbottom {
	margin-top: 20rpx;
	/* margin-bottom: 20upx; */
	padding-top: 20rpx;
	padding-bottom: 20rpx;
}
/* 头像文字 */
.info-words {
	color: #333333;
	font-size: 16px;
	width: 25%;
	line-height: 80rpx;
	/* font-weight: bold; */
}
/* 头像、昵称、生日、性别：内壳1 */
.right-wapper {
	width: 80%;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
	-webkit-box-pack: end;
	-webkit-justify-content: flex-end;
	        justify-content: flex-end;
}
/* 头像图片 */
.face {
	width: 80rpx;
	height: 80rpx;
	border-radius: 50%;
}
/* 箭头外壳 */
.arrow-block {
	margin-left: 10rpx;
	line-height: 86rpx;
}
/* 箭头 */
.arrow-ico {
	width: 30rpx;
	height: 30rpx;
}
/* 分割线 */
.line-top {
	/* margin-top: 20upx; */
}
/* 灰色字体 */
.gray-fields {
	font-size: 14px;
	color: darkgray;
	line-height: 80rpx;
}
/* 底部操作 start */
.footer-wapper {
	position: fixed;
	bottom: 0;
	
	display: -webkit-box;
	
	display: -webkit-flex;
	
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	width: 100%;
}
.footer-words {
	text-align: center;
	background-color: white;
	padding: 20rpx;
	
	color: #333333;
	font-size: 16px;
}
/* 底部操作 end */

